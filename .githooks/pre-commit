#!/bin/sh
echo "Running cargo fmt --check..."
cargo fmt --check
if [ $? -ne 0 ]; then
    echo ""
    echo "fmt check failed. Run 'cargo fmt' to fix."
    exit 1
fi

echo "Running cargo clippy..."
cargo clippy -- -D warnings
if [ $? -ne 0 ]; then
    echo ""
    echo "clippy check failed. Fix the warnings above."
    exit 1
fi
